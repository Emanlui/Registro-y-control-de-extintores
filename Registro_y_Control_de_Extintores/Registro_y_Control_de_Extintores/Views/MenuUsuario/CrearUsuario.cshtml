@{
    ViewData["Title"] = "Crear Usuario";
}
<head>
    <h1 style="text-align: center" ;>@ViewData["Title"]</h1>

    @model Registro_y_control_de_extintores.Controllers.MenuUsuarioController;
   

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</head>

<!--vinculo al css de este View-->
<link href ="~/css/CrearUsuario.css" rel="stylesheet" type="text/css">

<div class="wrapper fadeInDown" style="margin: auto; width: 70%; border: 6px solid blue; padding: 50px;">

    <div class="form">
        <form asp-action="CrearNuevoUsuario" asp-controller="MenuUsuarioController" method="get">
            <div class="columns">
                <p>
                    <label class="text-center">Cédula</label>
                    <input type="text" id="CedulaUsuario" name="CedulaUsuario">
                </p>
                <p>
                    <label for="">Contraseña</label>
                    <input type="text">
                </p>
                <p>
                    <label for="">Correo Electrónico</label>
                    <input type="text">
                </p>
                <p>
                    <label for="">Centro de Trabajo</label>
                    <input type="text">
                </p>
                <p>
                    <input type="submit" value="Registrar Usuario" formaction="@Url.Action("RegistrarUsuarioNuevo","MenuUsuario")" formmethod="get" class="btn btn-primary btn-lg btn-block" />
                </p>
            </div>
        </form>
    </div>
</div>


